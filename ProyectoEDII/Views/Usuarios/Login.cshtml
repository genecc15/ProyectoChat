@model ProyectoEDII.Models.Usuarios
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<div class="jumbotron">
    <p class="lead">
        @using (Html.BeginForm("Login", "Usuarios", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <h2>User</h2>
            <input type="text" name="user"/>
            <br/>

            <h2>Password</h2>
            <input type="password" name="password"/>
            <br/>

            <input type="submit" value="Login" class="btn btn.outline-succes"/>
            <div><h6 style="color:blueviolet";>@ViewBag.AccionIlegal</h6></div>
        }
    </p>
</div>
