@model ProyectoEDII.Models.Mensajes
@{
    ViewBag.Title = "Mensaje";
}

<h2>Mensaje</h2>
<div class=" jumbotron">
    <p class="lead">
        @using (Html.BeginForm("Mensaje", "Mensajes", FormMethod.Post, new { entype = "multipart/form-data" }))
        {
            <h2>Emisor</h2>
            <input type="text" name="Emisor"/>
            <br/>

            <h2>Receptor</h2>
            <input type="text" name="Receptor"/>
            <br/>

            <h2>Mensaje</h2>
            <input type="text" name="Mensaje"/>
            <br/>

            <input type="submit" value="Mensaje" class="btn btn.outline-success"/>
